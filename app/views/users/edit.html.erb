<%= form_for @user do |form| %>
  <%= render partial: "/users/form", object: form %>
  <div class="text-field">
    <%= form.label :gender %>
    <%= form.text_field :gender %>
  </div>
  <div class="text-field">
    <%= form.label :birthday %>
    <%= form.date_field :birthday %>
  </div>
  <div class="text-field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>
  <div>
    <%= form.label :profile_photo %>
    <%= form.file_field :profile_photo %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to "Back", user_path(@user.id)%>
